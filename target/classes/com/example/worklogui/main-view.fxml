<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.worklogui.CompanyManager">

    <!-- Top bar: Date + Company + Edit -->
    <top>
        <HBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Date:"/>
            <TextField fx:id="dateField" promptText="e.g. 05/01/2025"/>
            <Label text="Company:"/>
            <ComboBox fx:id="jobTypeCombo" prefWidth="150"/>
            <Button fx:id="editCompaniesBtn" text="âœŽ Edit Companies" onAction="#handleEditCompanies"/>
        </HBox>
    </top>

    <!-- Center: Time Input + Buttons + Result TextArea (in order) -->
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Time input and double pay -->
            <HBox spacing="10.0">
                <Label fx:id="valueLabel" text="Time Worked:"/>
                <TextField fx:id="valueField" promptText="e.g. 1.5"/>
                <CheckBox fx:id="doublePayCheckBox" text="Double Pay"/>
            </HBox>

            <!-- Action buttons -->
            <HBox spacing="10.0">
                <Button text="Log Work" onAction="#onLogWork"/>
                <Button text="Show Totals" onAction="#onShowTotal"/>
                <Button text="Show Earnings" onAction="#onShowEarnings"/>
                <Button text="ðŸ“Š Monthly/Yearly Summary" onAction="#onShowSummaryByMonthAndYear"/>
                <Button text="ðŸ“¤ Export CSV" onAction="#onExportCsv"/>
                <!-- Add this to your company-manager.fxml -->
                <Button fx:id="openLogEditorBtn" text="ðŸ“‹ View/Edit Logs" onAction="#onOpenLogEditor" />
            </HBox>

            <!-- Results -->
            <TextArea fx:id="resultArea" prefHeight="300" wrapText="true"/>
        </VBox>
    </center>
</BorderPane>